      "position": [
        1200,
        -100
      ],
      "id": "8079957e-320d-4916-b6d9-a8314e4648cc",
      "name": "Get Active Reps1",
      "credentials": {
        "postgres": {
          "id": "u1lL6qpbNWgDrAqx",
          "name": "Postgres account"
        }
      }
