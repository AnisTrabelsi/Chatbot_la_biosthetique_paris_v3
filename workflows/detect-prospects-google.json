    {
      "parameters": {
        "operation": "executeQuery",
        "query": "SELECT\n    id,\n    full_name,            -- nom complet du commercial\n    gps_lat  AS lat,      -- latitude d√©cimale\n    gps_lon  AS lng       -- longitude d√©cimale\nFROM users\nWHERE gps_lat IS NOT NULL     -- on garde ceux qui ont une position\n  AND gps_lon IS NOT NULL;\n",
